@page
@model GameLibrary.Pages.Admin.Reviews.DeleteModel

@{
    ViewData["Title"] = "Delete Review";
}

<body style="color:#FFD43B;">

    <header>
        <h1>Delete Review</h1>
        <h3>Are you sure you want to delete this review?</h3>
    </header>

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Review!.GameId)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Review!.GameId)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Review!.UserId)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Review!.UserId)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Review!.Rating)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Review!.Rating)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Review!.Content)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Review!.Content)
                </dd>
            </dl>
        </div>
    </div>

    <div class="row mt-3">
        <form method="post">
            <input type="hidden" asp-for="Review!.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" style="background-color: #420599; color: #FFD43B;" />
            <a asp-page="./Index" class="btn" style="background-color: #420599; color: #FFD43B;">Back to List</a>
        </form>
    </div>
</body>
