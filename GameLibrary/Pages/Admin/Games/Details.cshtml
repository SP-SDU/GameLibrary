@page
@model GameLibrary.Pages.Admin.Games.DetailsModel

@{
	ViewData["Title"] = "Details";
}
<body>
    <header>
        <h1>Game Details</h1>
    </header>
	<!--Game Details Section-->
	<div class="container py-5">
		<div class="row">
			<div class="col-lg-6 col-md-12">
				<dl class="row">
					<dt class="col-sm-4" style="color:#FFD43B;">
						Title:
					</dt>
					<dd class="col-sm-8">
						@Model.Game!.Title
					</dd>
					<dt class="col-sm-4" style="color:#FFD43B;">
						Genre:
					</dt>
					<dd class="col-sm-8">
						@Model.Game!.Genre
					</dd>
					<dt class="col-sm-4" style="color:#FFD43B;">
						Release:
					</dt>
					<dd class="col-sm-8">
						@Model.Game!.ReleaseDate.ToString("MMMM dd, yyyy")
					</dd>
					<dt class="col-sm-4" style="color:#FFD43B;">
						Developer:
					</dt>
					<dd class="col-sm-8">
						@Model.Game!.Developer
					</dd>
					<dt class="col-sm-4" style="color:#FFD43B;">
						Publisher:
					</dt>
					<dd class="col-sm-8">
						@Model.Game!.Publisher
					</dd>
					<dt class="col-sm-4" style="color:#FFD43B;">
						Platform:
					</dt>
					<dd class="col-sm-8">
						@Model.Game!.Platform
					</dd>
					<dt class="col-sm-4" style="color:#FFD43B;">
						Price:
					</dt>
					<dd class="col-sm-8">
						@Model.Game!.Price.ToString("C")
					</dd>
					<dt class="col-sm-4" style="color:#FFD43B;">
						Description:
					</dt>
					<dd class="col-sm-8">
						@Model.Game!.Description
					</dd>
				</dl>
			</div>
			<div class="col-lg-6 col-md-12 text-center">
                <img src="@Model.Game!.ImageUrl" class="" title="Game Image" style="width: 400px; height: auto;" />
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-12 text-center">
				<form method="post">
					<input type="hidden" asp-for="Game!.Id" />
					<a asp-page="./Edit" asp-route-id="@Model.Game!.Id" class="btn" style="background-color: #420599; color: #FFD43B;">Edit</a>
					<a asp-page="./Index" class="btn" style="background-color: #420599; color: #FFD43B;">Back to List</a>
				</form>
			</div>
		</div>
	</div>
</body>
