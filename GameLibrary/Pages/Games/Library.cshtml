@page
@model GameLibrary.Pages.Games.LibraryModel
@{
    ViewData["Title"] = "My Game Library";
}

<div class="container my-4">
    <h1>@ViewData["Title"]</h1>

    @if (!Model.Games.Any())
    {
        <div class="alert alert-info">
            Your library is empty. Start adding games to your collection!
        </div>
    }
    else
    {
        <div class="row g-4" id="gamesList">
            @foreach (var game in Model.Games)
            {
                <div class="col-md-6 col-lg-4 library-item" data-status="@Model.LibraryStatuses.TryGetValue(game.Id, out var libraryStatus) ? libraryStatus.ToLower().Replace(" ", "-") : """>
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(game.ImageUrl))
                        {
                            <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-gamepad fa-3x"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@game.Title</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    Added on @Model.LibraryStatuses.TryGetValue(game.Id, out var addedDate) ? addedDate.AddedDate.ToString("MMMM dd, yyyy") : ""
                                </small>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                @if (Model.LibraryStatuses.TryGetValue(game.Id, out var displayStatus))
                                {
                                    <span class="badge bg-primary">@displayStatus</span>
                                }
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Update Status
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form method="post" asp-page-handler="UpdateStatus" asp-route-gameId="@game.Id" asp-route-status="Plan to Play">
                                                <button type="submit" class="dropdown-item">Plan to Play</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-page-handler="UpdateStatus" asp-route-gameId="@game.Id" asp-route-status="Playing">
                                                <button type="submit" class="dropdown-item">Playing</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-page-handler="UpdateStatus" asp-route-gameId="@game.Id" asp-route-status="Completed">
                                                <button type="submit" class="dropdown-item">Completed</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-page-handler="UpdateStatus" asp-route-gameId="@game.Id" asp-route-status="On Hold">
                                                <button type="submit" class="dropdown-item">On Hold</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-page-handler="UpdateStatus" asp-route-gameId="@game.Id" asp-route-status="Dropped">
                                                <button type="submit" class="dropdown-item">Dropped</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <a asp-page="/Games/Details" asp-route-id="@game.Id" class="btn btn-outline-primary">Details</a>
                                <form method="post" asp-page-handler="RemoveFromLibrary" asp-route-gameId="@game.Id">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to remove this game from your library?')">
                                        Remove
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/games/library.css" />
}

@section Scripts {
    <script src="~/js/games/library.js"></script>
}
