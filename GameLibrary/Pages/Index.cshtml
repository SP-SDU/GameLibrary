@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <link rel="stylesheet" href="~/css/index.min.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
}

<section class="animation">

    <!-- Hero Section -->
    <div class="hero-section">
        <img src="~/images/Game.webp" class="hero-image" alt="background-image"/>
        <div class="hero-overlay"></div>
        <div class="hero-text">
            <h1 class="hero-title">Discover Our Library</h1>
            <h2 class="hero-subtitle">Review And Collect Your Games</h2>
            <p class="hero-description">Create a free account or log in to start your journey.</p>
            <div class="hero-buttons">
                <a class="cta-button" asp-area="" asp-page="/Account/Register">Create a Free Account</a>
                <a class="login-button" asp-area="" asp-page="/Account/Login">Log In</a>
            </div>
        </div>
        <div class="scroll-indicator">
            <span>Scroll Down</span><br />
            <span class="custom-icon"></span>
            <img src="~/images/chevron-double-down.webp" alt="chevron-double-down" />
        </div>
    </div>

    <img class="RRspaceship" src="/images/RRspaceship.webp" alt="RRspaceship">
    <img class="Uspaceship" src="/images/Ufo-spaceship.webp" alt="Uspaceship">

