@page
@model IndexModel
@{
    ViewData["Title"] = "GAMELIB";
}
<div class="container">
    <div class="hero-section">
        <div class="hero-text">
            <h1>Discover Our Library<br> Review And Collect<br> Your Game</h1>
            <p>Create a free account or log in if you already have one.</p>
            <a href="#" class="cta-button">Create a free account</a>
            <a href="#" class="login-button">Log In</a>
        </div>
        <div class="image-section">
            <img src="~/images/Gamer.jpg" alt="Gaming setup">
        </div>
    </div>

    <div class="about-section">
        <h2>What Is GAMELIB?</h2>
        <p>
            GAMELIB is a site to track your game collection. Review the games you've played and add those upcoming to
            your page.
        </p>
    </div>
</div>
